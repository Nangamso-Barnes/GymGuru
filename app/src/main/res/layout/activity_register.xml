<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Activity.RegisterActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back1">

                <!-- Title Bar -->
                <RelativeLayout
                    android:id="@+id/titleBarLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:paddingHorizontal="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/RegBackArrow"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/back_button"
                            android:padding="8dp"
                            android:src="@drawable/back_big"
                            app:tint="@color/grey" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/app_name"
                            android:textAlignment="center"
                            android:textColor="@color/grey"
                            android:textSize="26sp"
                            android:textStyle="bold" />
                </RelativeLayout>

                <!-- Title -->
                <TextView
                    android:id="@+id/regTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/create_account_title"
                    android:textColor="@color/white"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/titleBarLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Username -->
                <EditText
                    android:id="@+id/regUsername"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    android:background="@color/white"
                    android:hint="@string/hint_username"
                    android:inputType="text"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@id/regTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- First Name -->
                <EditText
                    android:id="@+id/RegFirstName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:hint="@string/hint_name"
                    android:inputType="textPersonName"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@id/regUsername"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Last Name -->
                <EditText
                    android:id="@+id/RegLastName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:hint="@string/hint_surname"
                    android:inputType="textPersonName"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@id/RegFirstName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Email -->
                <EditText
                    android:id="@+id/RegEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:hint="@string/prompt_email"
                    android:inputType="textEmailAddress"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@id/RegLastName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Gender Label -->
                <TextView
                    android:id="@+id/RegGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/label_gender"
                    android:textColor="@color/grey"
                    app:layout_constraintTop_toBottomOf="@id/RegEmail"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Gender RadioGroup -->
                <RadioGroup
                    android:id="@+id/rgGender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/RegGender"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                        <RadioButton
                            android:id="@+id/rbnRegMale"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/radio_button_male"
                            android:textColor="@color/grey" />

                        <RadioButton
                            android:id="@+id/rbnRegFemale"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/radio_button_female"
                            android:textColor="@color/grey" />
                </RadioGroup>

                <!-- Phone -->
                <EditText
                    android:id="@+id/RegPhoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:hint="@string/hint_phone_number"
                    android:inputType="phone"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@id/rgGender"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Address -->
                <EditText
                    android:id="@+id/RegStreetNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:hint="@string/hint_street_number"
                    android:inputType="number"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@id/RegPhoneNumber"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <EditText
                    android:id="@+id/RegStreetName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:hint="@string/hint_street_name"
                    android:inputType="text"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@id/RegStreetNumber"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Password -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/passwordLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/RegStreetName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                        <EditText
                            android:id="@+id/RegPassword"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="@string/prompt_password"
                            android:inputType="textPassword"
                            android:padding="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/ivTogglePassword"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/ivTogglePassword"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="@string/cd_toggle_password_visibility"
                            android:onClick="onClickedPasswordIcon"
                            android:padding="6dp"
                            android:src="@drawable/ic_eye"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Confirm Password -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/confirmPasswordLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/passwordLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                        <EditText
                            android:id="@+id/RegConfirmPassword"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="@string/hint_confirm_password"
                            android:inputType="textPassword"
                            android:padding="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/ivToggleConfirmPassword"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <ImageView
                            android:id="@+id/ivToggleConfirmPassword"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="@string/cd_toggle_confirm_password_visibility"
                            android:onClick="onClickedConfirmIcon"
                            android:padding="6dp"
                            android:src="@drawable/ic_eye"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Admin Code -->
                <EditText
                    android:id="@+id/RegAdminCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:hint="@string/hint_admin_code"
                    android:inputType="textPassword"
                    android:padding="16dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/confirmPasswordLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:visibility="visible" />

                <!-- Register Button -->
                <Button
                    android:id="@+id/btnReg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/button_create"
                    android:onClick="onClickedCreate"
                    app:layout_constraintTop_toBottomOf="@id/RegAdminCode"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Already have account -->
                <TextView
                    android:id="@+id/textAlreadyExists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"
                    android:onClick="onClickedAlready"
                    android:text="@string/already_have_account_link"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/btnReg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
